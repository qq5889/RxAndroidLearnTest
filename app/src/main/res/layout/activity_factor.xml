<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_all"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=".all的简单用法"/>

        <Button
            android:id="@+id/btn_amb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=".amb的简单用法"/>

        <Button
            android:id="@+id/btn_contains"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=".contains的简单用法"/>

        <Button
            android:id="@+id/btn_exists"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=".exists的简单用法"/>

        <Button
            android:id="@+id/btn_isEmpty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=".isEmpty的简单用法"/>

        <Button
            android:id="@+id/btn_defaultEmpty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=".defaultEmpty的简单用法"/>

        <Button
            android:id="@+id/btn_switchIfEmpty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=".switchIfEmpty的简单用法"/>

        <Button
            android:id="@+id/btn_sequenceEqual"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=".sequenceEqual的简单用法"/>

        <Button
            android:id="@+id/btn_skipUntil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=".skipUntil的简单用法"/>

        <Button
            android:id="@+id/btn_skipWhile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=".skipWhile的简单用法"/>

        <Button
            android:id="@+id/btn_takeUntil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=".takeUntil的简单用法"/>

        <Button
            android:id="@+id/btn_takeWhile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=".takeWhile的简单用法"/>
    </LinearLayout>
</ScrollView>
